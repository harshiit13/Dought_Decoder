<%- include('../Partial/head.ejs') %>
    <%- include('../Partial/header.ejs') %>


        <div class="body-wrapper">
            <div class="container-fluid" style="padding-top: 150px !important;">



                
                <div class="table-responsive rounded-2 mb-4">
                    <table class="table border text-nowrap customize-table mb-0 align-middle">
                      <thead class="text-dark fs-4">
                        <tr>
                          <th><h6 class="fs-4 fw-semibold mb-0">Teacher Name</h6></th>
                          <th><h6 class="fs-4 fw-semibold mb-0">Start Time</h6></th>
                          <th><h6 class="fs-4 fw-semibold mb-0">End Time</h6></th>
                          <th><h6 class="fs-4 fw-semibold mb-0">Status</h6></th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                          <% for (slot of data){ %>

                        <tr>
                          <td>
                                <h6 class="fs-4 fw-semibold mb-0"><%= slot.TeacherName %></h6>
                              </div>
                            </div>
                          </td>
                          <td><h5 class="mb-0 fw-normal"><%= slot.StartTime %></h5></td>
                          <td>
                            <h5 class="mb-0 fw-normal"><%= slot.EndTime %></h5>
                          </td>
                          <td>
                            <% if(slot.Status == "Accepted"){ %>
                                <span class="mb-1 badge font-medium bg-light-success text-success"><%= slot.Status %></span>
                                <% }else if(slot.Status == "Declined"){ %>
                                    <span class="mb-1 badge font-medium bg-light-danger text-danger"><%= slot.Status %></span>

                                    <% }else{ %>
                            
                    <span class="mb-1 badge font-medium bg-light-warning text-warning"><%= slot.Status %></span>
                          
                <% } %>
                </td>
                          <% } %>
                      </tbody>
                    </table>
                  </div>


            </div>
        </div>      



    <%- include('../Partial/footer.ejs') %>